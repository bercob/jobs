<%= simple_form_for(@offer) do |f| %>
  <%= f.error_notification %>

    <%= f.input :external_offer_id %>
    <%= f.input :offerdate %>
    <%= f.input :position %>
    <%= f.input :location %>
    <%= f.input :content %>
    <%= f.input :url %>
    <%= f.input :company %>
    <%= f.input :ico %>
    <%= f.association :offercategories, collection: @offercategories, html_input: { multiple: true } %>
    <%= f.association :jobtypes, collection: @jobtypes, html_input: { multiple: true } %>
    <%= f.association :offerpositions, collection: @offerpositions, html_input: { multiple: true } %>
    <%= f.association :offerregions, collection: @offerregions, html_input: { multiple: true } %>

    <%= f.button :submit %>
<% end %>
