<p id="notice"><%= notice %></p>

<p>
  <strong>External offer ID:</strong>
  <%= @offer.external_offer_id %>
</p>

<p>
  <strong>Offerdate:</strong>
  <%= @offer.offerdate %>
</p>

<p>
  <strong>Last update:</strong>
  <%= @offer.last_update %>
</p>

<p>
  <strong>Position:</strong>
  <%= @offer.position %>
</p>

<p>
  <strong>Location:</strong>
  <%= @offer.location %>
</p>

<p>
  <strong>Content:</strong>
  <%= @offer.content %>
</p>

<p>
  <strong>Url:</strong>
  <%= link_to @offer.offer_source.name, url_with_protocol(@offer.url), target: '_blank' %>
</p>

<p>
  <strong>Company:</strong>
  <%= @offer.company %>
</p>

<p>
  <strong>Ico:</strong>
  <%= @offer.ico %>
</p>

<% if @offer.offercategories.length > 0 %>
<p>
  <strong>Offer categories:</strong>
  <% @offer.offercategories.each do |oc| %>
  <div><%= oc.name %></div>
  <% end %>
</p>
<% end %>

<% if @offer.offerpositions.length > 0 %>
<p>
  <strong>Offer positions:</strong>
  <% @offer.offerpositions.each do |op| %>
    <div><%= op.name %></div>
<% end %>
</p>
<% end %>

<% if @offer.offerregions.length > 0 %>
<p>
  <strong>Offer regions:</strong>
  <% @offer.offerregions.each do |oreg| %>
    <div><%= oreg.name %></div>
<% end %>
</p>
<% end %>

<% if current_user && @offer.offer_source == OfferSource.find_by(name: 'local') %>
    <%= link_to 'Edit', edit_offer_path(@offer), class: 'btn btn-default' %>
<% end %>
<%= link_to 'Back', :back, class: 'btn btn-default' %>
