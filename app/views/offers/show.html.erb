<p>
  <strong>External offer ID:</strong>
  <%= t(@offer.external_offer_id) if @offer.external_offer_id.present? %>
</p>

<p>
  <strong>Offerdate:</strong>
  <%= l(@offer.offerdate) %>
</p>

<p>
  <strong>Last update:</strong>
  <%= l(@offer.last_update, format: :long) %>
</p>

<p>
  <strong>Position:</strong>
  <%= @offer.position %>
</p>

<p>
  <strong>Location:</strong>
  <%= @offer.location %>
</p>

<p>
  <strong>Content:</strong>
  <%= @offer.content %>
</p>

<p>
  <strong>Url:</strong>
  <%= offer_url(@offer) %>
</p>

<p>
  <strong>Company:</strong>
  <%= @offer.company %>
</p>

<p>
  <strong>Ico:</strong>
  <%= @offer.ico %>
</p>

<% if @offer.offercategories.length > 0 %>
    <p>
      <strong>Offer categories:</strong>
      <% @offer.offercategories.each do |oc| %>
        <div><%= oc.name %></div>
    <% end %>
    </p>
<% end %>

<% if @offer.offerpositions.length > 0 %>
    <p>
      <strong>Offer positions:</strong>
      <% @offer.offerpositions.each do |op| %>
        <div><%= op.name %></div>
    <% end %>
    </p>
<% end %>

<% if @offer.offerregions.length > 0 %>
    <p>
      <strong>Offer regions:</strong>
      <% @offer.offerregions.each do |oreg| %>
        <div><%= oreg.name %></div>
    <% end %>
    </p>
<% end %>

<% if current_user && @offer.offer_source_id == OfferSource.local.id %>
    <%= link_to 'Edit', edit_offer_path(@offer), class: 'btn btn-default' %>
<% end %>
<%= link_to 'Back', :back, class: 'btn btn-default' %>
