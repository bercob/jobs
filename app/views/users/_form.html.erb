<%= simple_form_for @user do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.association :degree %>
    <%= f.association :languages, collection: @languages, html_input: { multiple: true } %>
    <% if current_user.admin? %>
        <%= f.input :admin %>
    <% end %>

    <%= f.button :submit %>
<% end %>
