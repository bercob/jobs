<!DOCTYPE html>
<html>
<head>
  <title>Jobs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="row">
    <div class="col-*-*">
      <% if flash[:notice] %>
          <div id="notice" class="alert alert-success"><%= flash[:notice] %></div>
      <% end  %>
      <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
    </div>
  </div>
  <div id="nav" class="row">
    <div class="col-*-6">
    <% if current_user %>
        <%= link_to "Edit Profile", edit_user_path(current_user.id), class: 'btn btn-default' %>
        <%= link_to "Logout", :logout, method: :post, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
    <% else %>
        <%= link_to "Login", :login, class: 'btn btn-default' %>
    <% end %>
    </div>
    <% if current_user %>
    <div class="col-*-6"><span class="pull-right">welcome <%= current_user.email %></span></div>
    <% end %>
  </div>
  <div><%= yield %></div>

</div>

</body>
</html>
