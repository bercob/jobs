<!DOCTYPE html>
<html>
<head>
  <title>Jobs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% if current_user %>
      <div class="row">
        <div class="col-sm-12 text-right">welcome <%= current_user.email %></div>
      </div>
  <% end %>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body menu-panel">
        <div class="col-sm-6">
          <% if current_user %>
              <%= link_to 'Users', :users, class: 'btn btn-default' %>
          <% end %>
        </div>
        <div class="col-sm-6 text-right">
          <% if current_user %>
              <%= link_to 'Edit Profile', edit_user_path(current_user.id), class: 'btn btn-default' %>
              <%= link_to 'Logout', :logout, method: :post, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
          <% else %>
              <%= link_to 'Login', :login, class: 'btn btn-default' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div><%= yield %></div>
  <br>
  <div class="row">
    <div class="col-sm-*">
      <% if flash[:notice] %>
          <div id="notice" class="alert alert-success"><%= flash[:notice] %></div>
      <% end  %>
      <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
    </div>
  </div>
</div>

</body>
</html>
